cabal-version:      2.4
name:               monty
version:            0.1.0.0
synopsis:           JIT Compiler for the Monty Programming Language
-- description:
homepage:           https://github.com/Turtel216/Monty
license:            MIT
license-file:       LICENSE
author:             Dimitrios Papakonstantinou
maintainer:         papakonstantinou.dm@gmail.com
copyright:          Copyright 2024 Dimitrios Papakonstantinou
category:           Language
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common warnings
    ghc-options: -Wall

library
    import:           warnings
    exposed-modules:  Lexer
    -- other-modules:
    -- other-extensions:
    build-depends:    base ^>=4.17.2.1, parsec
    hs-source-dirs:   src
    default-language: Haskell2010

executable monty
    import:           warnings
    main-is:          Main.hs
    -- other-modules:
    -- other-extensions:
    build-depends:
        base ^>=4.17.2.1,
        monty

    hs-source-dirs:   app
    default-language: Haskell2010

test-suite monty-test
    import:           warnings
    default-language: Haskell2010
    -- other-modules:
    -- other-extensions:
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base ^>=4.17.2.1,
        monty
